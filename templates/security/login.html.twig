{% extends 'base.html.twig' %}

{% block title %}BabyBoard | Se connecter{% endblock %}

{% block body %}
    <div class="site-section">
      <div class="container mt-5">
        <div class="row d-flex justify-content-center">
          <div class="col-lg-7 col-sm-12 mt-5">
            <form action="#" method="post">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}
                <h1 class="h3 mb-3 font-weight-normal">Veuillez vous connecter</h1>

                <label for="username">Email</label>
                <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="email" required autofocus>
                <label for="password">Mot de passe</label>
                <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                <div class="text-center">
                Vous n'avez pas de compte ?
                  <a href="{{path('app_register')}}"> Créez-en un ici !</a>
                </div>
                <div class="text-center">
                    Vous avez oublié votre mot de passe ?
                    <a href="{{path('app_forgot_password_request')}}"> Réinitialiser votre mot de passe ici.</a>
                </div>
                <div class="text-center">
                    <button class="btn btn-lg btn-primary mt-2" type="submit">
                        Se connecter
                    </button>
                </div>
            </form>
          </div>
        </div>
      </div>
    </div>
{% endblock %}
