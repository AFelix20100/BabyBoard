{% extends 'base_dashboard.html.twig' %}

{% block title %}BabyBoard | Liste des participants{% endblock %}

{% block body %}
    <div class="site-section">
        <div class="container mt-5">
            <div class="row d-flex justify-content-center">
                <div class="col-lg-7 col-sm-12" style="margin-top: 75px;">
                    <a href="{{ path('app_dashboard_team_index') }}">Retour à la liste</a>
                    <h1>Liste des participants</h1>
                    <div class="widget-next-match">
                        <div class="table-responsive">
                            <table class="table custom-table">
                                <thead>
                                <tr class="text-center">
                                    <th>ID</th>
                                    <th>PSEUDO</th>
                                    <th>ACTION</th>
                                </tr>
                                </thead>
                                <tbody class="text-center">
                                {% for team_composition in team_composition %}
                                    <tr>
                                        <td>{{ loop.index }}</td>
                                        <td><p class="text-primary">{{ team_composition.player.pseudo }}</p></td>
                                        <td>
                                            {% if team_composition.isHost != true %}
                                                <div class="row d-flex justify-content-around">
                                                    {{ include('dashboard/team_composition/_delete_form.html.twig') }}
                                                </div>
                                            {% else %}
                                                Impossible
                                            {% endif %}
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td>Aucun enregistrement n'a été trouvé</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="d-flex justify-content-center mt-2">
                        <a class="btn btn-sm btn-primary mb-2" href="{{ path('app_dashboard_team_composition_new', {id : team.id}) }}">Ajouter un participant</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
