{% extends 'base.html.twig' %}

{% block title %}Player{% endblock %}

{% block body %}
    <h1>Player</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ player.id }}</td>
            </tr>
            <tr>
                <th>LastName</th>
                <td>{{ player.lastName }}</td>
            </tr>
            <tr>
                <th>FirstName</th>
                <td>{{ player.firstName }}</td>
            </tr>
            <tr>
                <th>Mail</th>
                <td>{{ player.email }}</td>
            </tr>
            <tr>
                <th>Pseudo</th>
                <td>{{ player.pseudo }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ player.createdAt ? player.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ player.updatedAt ? player.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_player_index') }}">back to list</a>

    <a href="{{ path('app_player_edit', {'id': player.id}) }}">edit</a>

    {{ include('player/_delete_form.html.twig') }}
{% endblock %}
