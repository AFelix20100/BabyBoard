{% extends 'base.html.twig' %}

{% block title %}Team index{% endblock %}

{% block body %}
<div class="hero overlay background-team">
	<div class="container">
		<div class="row align-items-center">
			<div class="col-lg-5 mx-auto text-center">
				<h1 class="text-white">Équipes</h1>
				<p>Découvrez les équipes !
				</p>
			</div>
		</div>
	</div>
</div>
    <div class="site-section bg-dark">
      <div class="container mt-5">
        <div class="row">
          <div class="col-12">
            <div class="widget-next-match">
              <table class="table custom-table">
                <thead>
                  <tr>
                    <th>ID</th>
                    <th>NOM</th>
                    <th>NOMBRE DE JOUEURS</th>
                    <th>NOMBRE DE PARTIES JOUÉES</th>
                    <th>NOMBRE DE VICTOIRE</th>
                  </tr>
                </thead>
                <tbody>
                  
                    {% for team in teams %}
                        <tr>
                            <td>{{ team.id }}</td>
                            <td><strong class="text-white">{{ team.name }}</strong></td>
                            <td>{{ team.teamCompositions|length }}</td>
                            <td>3</td>
                            <td>2</td>
                        </tr>
                    {% else %}
                        <tr>
                            <td>no records found</td>
                        </tr>
                    {% endfor %}
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div> <!-- .site-section -->
{% endblock %}
